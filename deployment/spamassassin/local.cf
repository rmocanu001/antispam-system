# SpamAssassin local.cf

# Score Requirement
required_score 5.0

# Text Layout
report_safe 0

# Network Tests
use_bayes 1
bayes_auto_learn 1

# Trusted Networks
trusted_networks 192.168.1.0/24

# IGSU Custom Rules
header IGSU_FAKE_ALERT Subject =~ /Urgent|Alerta|Incendiu/i
score IGSU_FAKE_ALERT 1.0

# Short circuit for high scoring spam
shortcircuit BAYES_99                spam
shortcircuit BAYES_99                score 10.0
